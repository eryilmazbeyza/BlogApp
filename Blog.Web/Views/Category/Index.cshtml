@model IEnumerable<Blog.Web.Models.CategoryViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Index", "Category", FormMethod.Get))
{
    <h2>Category</h2>
    <b>Search By:</b>
    @Html.RadioButton("SearchBy", "Name", true)
    <text>Name</text>
    <br>

    @Html.TextBox("search", "", htmlAttributes: new { @class = " w-50 form-control" })
    <input type="submit" value="Search" class="btn btn-success" />

    <div class="table">
        <div class="col-header">
            @Html.ActionLink("Add Category", "AddCategory", null, new { @class = "btn" })
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastModified)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastModifiedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryId)
                </th>
                <th>
                    Actions
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastModified)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastModifiedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryId)
                    </td>
                    <td>
                        <div class="col">
                            @Html.ActionLink("Edit", "EditCategory", new { id = item.CategoryId })
                            @Html.ActionLink("Delete", "DeleteCategory", new { id = item.CategoryId })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>






}

